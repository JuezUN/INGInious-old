{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "rules": {
    "max-line-length": [
      true,
      120
    ],
    "import-name": false,
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case"
    ],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "align": false
  }
}
